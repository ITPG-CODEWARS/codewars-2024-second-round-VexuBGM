<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <title>URL Shortener</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 50px;
    }
    .form-inline .form-control {
      width: 100%;
    }
    .table-responsive {
      margin-top: 20px;
    }
    .btn-primary, .btn-danger {
      margin-right: 5px;
    }
    .qr-code {
      width: 100px;
      height: 100px;
      margin-right: 10px;
    }
    .text-center {
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center">URL Shortener</h1>
    <div id="warning" class="alert alert-danger d-none"></div>
    <form id="shortenForm" class="my-4">
      <div class="row g-2">
        <div class="col-md-6">
          <label for="fullURL" class="visually-hidden">URL</label>
          <input required placeholder="Enter the full URL" type="url" name="fullURL" id="fullURL" class="form-control">
        </div>
        <div class="col-md-3">
          <label for="customShortURL" class="visually-hidden">Custom Short URL</label>
          <input placeholder="Custom Short URL" type="text" name="customShortURL" id="customShortURL" class="form-control">
        </div>
        <div class="col-md-2">
          <label for="urlLength" class="visually-hidden">URL Length</label>
          <input placeholder="URL Length" type="number" name="urlLength" id="urlLength" class="form-control" min="5" max="10">
        </div>
        <div class="col-md-1">
          <button class="btn btn-success w-100" type="submit">Shorten</button>
        </div>
      </div>
    </form>

    <table class="table table-striped table-responsive text-center align-middle">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
          <th>QR Code</th>
          <th>Download</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% shortURLs.forEach(shortURL => { %>
          <tr>
            <td><a href="<%= shortURL.full %>" target="_blank"><%= shortURL.full %></a></td>
            <td><a href="<%= shortURL.short %>" target="_blank"><%= shortURL.short %></a></td>
            <td><%= shortURL.clicks %></td>
            <td><img src="<%= shortURL.qrCodeURL %>" alt="QR Code" class="qr-code"></td>
            <td><a href="/qrcode/<%= shortURL.short %>" class="btn btn-primary">Download QR Code</a></td>
            <td><button class="btn btn-danger delete-btn" data-id="<%= shortURL._id %>">Delete</button></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    $('#shortenForm').on('submit', function(event) {
      event.preventDefault();
      $.ajax({
        type: 'POST',
        url: '/shortURLs',
        data: $(this).serialize(),
        success: function() {
          location.reload();
        },
        error: function(xhr) {
          $('#warning').text(xhr.responseText).removeClass('d-none');
        }
      });
    });

    $('.delete-btn').on('click', function() {
      const id = $(this).data('id');
      if (confirm('Are you sure you want to delete this URL?')) {
        $.ajax({
          type: 'DELETE',
          url: '/shortURLs/' + id,
          success: function() {
            location.reload();
          },
          error: function(xhr) {
            $('#warning').text(xhr.responseText).removeClass('d-none');
          }
        });
      }
    });
  </script>
</body>
</html>